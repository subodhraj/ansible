---
- hosts: all 
  become: true 
  tasks: 
    - name: sshd file config 
      lineinfile: 
        path: /etc/ssh/sshd_config
        regexp: '^PermitRootLogin'
        line: PermitRootLogin yes
    - name: sshd panos_restart
      service:
          name: sshd
          state: restarted
          
         
